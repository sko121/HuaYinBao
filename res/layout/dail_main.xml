<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dail_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="85dp"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/main_background" >

	<LinearLayout
		android:id="@+id/dail_edit_box"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:layout_weight="4">

		<LinearLayout
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
    		android:layout_marginLeft="@dimen/dail_main_text_marginleft"
    		android:layout_marginTop="@dimen/dail_main_text_margintop"
    		android:layout_marginBottom="@dimen/dail_main_text_marginbottom"
    		android:layout_marginRight="@dimen/dail_main_text_marginright"
    		android:gravity="center"
    		android:orientation="horizontal"
    		android:background="@drawable/dail_bg">

                  <EditText
                    android:id="@+id/dail_edit"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:ellipsize="start"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="@dimen/phonenum_txt"/>
                <LinearLayout
    				android:layout_width="0dp"
    				android:layout_weight="1"
    				android:gravity="center"
    				android:layout_height="match_parent">
            		<ImageButton
                		android:id="@+id/btn_dail_delete"
                    	android:layout_width="wrap_content"
                		android:layout_height="wrap_content"
                		android:background="@drawable/dail_delete" />
				</LinearLayout>
		</LinearLayout>

	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/dail_desc_info"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:orientation="vertical"
		android:layout_weight="2">
		
            <TextView
            	android:id="@+id/txt_dail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/entry_txt"
                android:textColor="@color/white" />

            <TextView
            	android:id="@+id/txt_dail_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/entry_txt"
                android:textColor="@color/white" />

	</LinearLayout>
	
	<LinearLayout
		android:id="@+id/dail_control"
		android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:layout_weight="2">

		   <ImageButton
                android:id="@+id/btn_dail_voice_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/voice_record" />

            <ImageButton
                android:id="@+id/btn_dail_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/call_incoming_cancel" />

	</LinearLayout>

</LinearLayout>
